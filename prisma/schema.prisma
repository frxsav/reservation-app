generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}
        

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())
}

model Booking {
  id        String   @id @default(cuid())
  name      String
  email     String
  people    Int
  date      DateTime
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  STAFF
  CLIENT
}
